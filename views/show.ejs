<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>ScribbleBoard | View Task</title>
</head>
<body class="bg-slate-900 text-white">
  <div class="w-full min-h-screen p-10">
    <a class="text-indigo-500 hover:underline mb-8 inline-block" href="/">‚Üê Go Back to Home</a>

    <h1 class="text-4xl font-semibold mb-6 text-indigo-500 tracking-tighter"><%= filename %></h1>

    <form action="/update-content" method="POST" id="editForm">
      <input type="hidden" name="filename" value="<%= filename %>" />

      <!-- Display paragraph initially -->
      <div id="displayMode" class="text-xl mt-2 font-light text-gray-300 whitespace-pre-line"><%= filedata %></div>

      <!-- Hidden textarea for editing -->
      <textarea
        name="content"
        id="editArea"
        class="hidden w-full bg-slate-800 text-white p-4 mt-2 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-indigo-500"
        rows="10"
      ><%= filedata %></textarea>

      <div class="mt-4 flex items-center gap-4">
        <button
          type="button"
          id="editBtn"
          class="bg-yellow-500 text-black px-6 py-2 rounded-md font-medium hover:brightness-110 transition"
        >
          Modify
        </button>

        <button
          type="submit"
          id="saveBtn"
          class="hidden bg-indigo-500 px-6 py-2 rounded-md font-medium hover:brightness-110 transition"
        >
          Save Changes
        </button>
      </div>
    </form>
  </div>

  <script>
    const displayDiv = document.getElementById('displayMode');
    const editArea = document.getElementById('editArea');
    const editBtn = document.getElementById('editBtn');
    const saveBtn = document.getElementById('saveBtn');

    editBtn.addEventListener('click', () => {
      displayDiv.classList.add('hidden');
      editArea.classList.remove('hidden');
      editArea.focus();
      editBtn.classList.add('hidden');
      saveBtn.classList.remove('hidden');
       // cursor to end
        const val = editArea.value;
        editArea.value = '';
        editArea.value = val;

        editBtn.classList.add('hidden');
        saveBtn.classList.remove('hidden');
    });
  </script>
</body>
</html>
